<div class="paggination-container">
    <div class="paggination-inner">
        <div id="paggination-pages" class="paggination-pages">
            <a data-page="1" class="paggination-prev hover">
                <i class="fa-solid fa-caret-left"></i>
            </a>
            {% set lastPage = 0 %}
            {% for element in paggination %}
                <a data-page="{{element.value}}"class="paggination-page-element hover {% if element.active %} active {% endif %}">
                    {{element.label}}
                </a>
                {% set lastPage = lastPage + 1 %}
            {% endfor %}
            <a data-page="{{lastPage}}" class="paggination-next hover">
                <i class="fa-solid fa-caret-right"></i>
            </a>
        </div>

        <div class="paggination-per-page" data-controller="paggination">
            <span id="per-page-count" class="per-page-count hover" data-action="click->paggination#showList">
                13
            </span>
            <div class="per-page-list" id="per-page-list">
                <a class="count-list-element hover" data-per-page="5">
                    5
                </a>
                <a class="count-list-element hover" data-per-page="10">
                    10
                </a>
                <a class="count-list-element hover" data-per-page="20">
                    20
                </a>
                <a class="count-list-element hover" data-per-page="30">
                    30
                </a>
            </div>
        </div>
    </div>
</div>